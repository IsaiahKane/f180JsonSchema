{
	"$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
  "title": "Book JSON Schema",
  "type": "object",
  "properties": {
  	"faculty_id": {
  		"type": "string"
  	},
  	"title": {
  		"type": "string"
  	},
  	"year_info": {
  		"type": "number"
  	},
  	"volume": {
  		"type": "string"
  	},
  	"edition": {
  		"type": "string"
  	},
  	"series_title": {
  		"type": "string"
  	},
  	"publisher": {
  		"type": "object",
  		"proeprties": {
  			"name": {
  				"type": "string"
  			},
  			"location": {
  				"type": "string"
  			},
  		}
  	},
  	"coauthors": {
      "type": "object",
      "properties": {
      	"coauthor_string": {
      		"type": "string",
      		"description": "A single line of all contributing authors, separated by commas."
      	},   
      	"coauthor_list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "first_name",
              "last_name"
            ],
            "properties": {
              "first_name": {
                "type": "string"
              },
              "last_name": {
                "type": "string"
              },
              "middle_initial": {
                "type": "string"
              },
                "email": {
                "type": "string",
                "format": "email"
              },
              "affiliation": {
                "type": "object",
                "required": ["institution_name","ipeds_id"],
                "properties": {
                  "institution_name": {"type": "string"},
                  "intf_db_id": {
                    "description": "The faculty180 database.",
                    "type": "string"
                  },
                  "ipeds_id": {
                    "description": "Standard identifier for Universities",
                    "type": "string"
                  }                     
                }
              },
              "ids": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "source",
                    "pid"
                  ],
                  "minItems": 1,
                  "properties": {
                    "source": {
                      "description": "Where the id comes from",
                      "type": "string"
                    },
                    "pid": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
     		}
      } 		  		
  	},
  	"pages": {
  		"type": "string"
  	},
  	"url": {
  		"type": "string",
  		"format": "uri"
  	},
  	"identifier": {
  		"type": "string"
  	},
  	"description": {
  		"type": "string"
  	},
    "book_type_general": {
      "type": "string",
      "enum": [
        "Book, Non-Scholarly-Revised",
        "Book, Non-Scholarly-New",
        "Book, Scholarly-Revised",
        "Book, Scholarly-New",
        "Book, Textbook-Revised",
        "Book, Textbook-New"
      ]
    },
    "book_type": {
      "type": "string",
      "enum": [
        "Professional Practice or Trade",
        "Reasearch Monograph",
        "Textbook",
        "Other"
      ]
    },
    "review_type": {
      "type": "string",
      "enum": [
        "Blind Peer Reviewed",
        "Non-blind Peer Reviewed",
        "Editorially Reviewed",
        "Not Reviewed"
      ]
    },
    "student_involvement": {
      "type": "string",
      "enum": [
        "Undergraduate/Grad",
        "Graduate",
        "Undergraduate"
      ]
    },
    "historical_status": {
      "type": "string",
      "enum": [
        "First Draft Complete",
        "Data Analysis Complete",
        "Data Collection Complete",
        "Rejected, Now Revising",
        "Not Accepted",
        "Research Question Identified",
        "Accepted",
        "Revising to Resubmit",
        "Published",
        "Submitted"
      ]
    },
    "publicly_available": {
      "type": "string",
      "enum": [
        "Yes",
        "No"
      ]
    }
  }
}