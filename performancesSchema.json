{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
  "title": "Performances JSON Schema",
	"type": "object",
	"properties": {
		"faculty_id": {"type": "string"},
		"title": {"type": "string"},
		"event": {"type": "string"},
		"year_info": {"type": "number"},
		"date_info": {"type": "string"},
		"location": {"type": "string"},
		"sponsor": {"type": "string"},
		"contributors": {
      "type": "object",
      "properties": {
  		  "author_string": {"type": "string"},
      	"author_list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "first_name",
              "last_name"
            ],
            "properties": {
              "first_name": {"type": "string"},
              "last_name": {"type": "string"},
              "middle_initial": {"type": "string"},
                "email": {
                "type": "string",
                "format": "email"
              },
              "affiliation": {
                "type": "object",
                "required": ["institution_name","ipeds_id"],
                "properties": {
                  "institution_name": {"type": "string"},
                  "intf_db_id": {
                    "description": "The faculty180 database.",
                    "type": "string"
                  },
                  "ipeds_id": {
                    "description": "Standard identifier for Universities",
                    "type": "string"
                  }                     
                }
              },
              "ids": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "source",
                    "pid"
                  ],
                  "minItems": 1,
                  "properties": {
                    "source": {
                      "description": "Where the id comes from",
                      "type": "string"
                    },
                    "pid": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "url": {
    	"type": "string",
    	"format": "uri"
    },
    "description": {"type": "string"},
    "reason": {
      "type": "string",
      "enun": [
        "Audition",
        "Invitation",
        "Commission",
        "Competition",
        "None Of These"
      ]
    },
    "inv_or_acc": {
      "type": "string",
      "enum": [
        "Invited",
        "Accepted",
        "Not Applicable"
      ]
    },
    "review_type": {
      "type": "string",
      "enum": [
        "Blind Peer Reviewed",
        "Non-blind Peer Reviewed",
        "Editorially Reviewed",
        "Invited",
        "Not Reviewed"
      ]
    },
    "in_ex": {
      "type": "string",
      "enum": [
        "Internal",
        "External"
      ]
    }
	}
}