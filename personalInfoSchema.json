{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
	"title": "Personal Information Schema",
	"type": "object",
	"properties": {
		"personal_information": {
			"type": "object",
			"required": ["pid","first_name","last_name","institutional_affiliation","email"],
			"properties": 	{
				"pid": {
					"description": "Interfolio universal, application neutral Personal Identifier",
					"type": "string"
				},
				"faculty_id": {
					"description": "faculty180, institutional specific facultyID",
					"type": "string"
				},
				"first_name": {"type": "string"},
				"middle_initial": {"type": "string"},
				"last_name": {"type": "string"},
				"suffix": {"type": "string"},
				"email": {"type": "string"},
				"institutional_affiliation": {
					"type": "object",
					"required": ["ipeds_id", "institution_name"],
					"properties": {
						"ipeds_id": {
							"description": "Standard identifier for Universities",
							"type": "string"
						},
						"institution_name": {"type": "string"},
						"intf_db_id": {
							"description": "The faculty180 database.",
							"type": "string"
						}
					}
				}
			}
		},
	}
}