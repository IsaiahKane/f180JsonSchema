{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
  "title": "Case Study Schema",
  "type": "object",
  "properties": {
    "faculty_id": {"type": "string"},
    "title": {"type": "string"},
    "case_source": {
      "description": "Source for the case",
      "type": "string"
    },
    "publisher": {"type": "string"},
    "year_info": {"type": "number"},
    "coauthors": {
      "coauthor_string": {"type": "string"},    
      "coauthor_list": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "first_name",
            "last_name"
          ],
          "properties": {
            "first_name": {"type": "string"},
            "last_name": {"type": "string"},
            "middle_initial": {"type": "string"},
              "email": {
              "type": "string",
              "format": "email"
            },
            "affiliation": {
              "type": "object",
              "required": ["institution_name","ipeds_id"],
              "properties": {
                "institution_name": {"type": "string"},
                "intf_db_id": {
                  "description": "The faculty180 database.",
                  "type": "string"
                },
                "ipeds_id": {
                  "description": "Standard identifier for Universities",
                  "type": "string"
                }                     
              }
            },
            "ids": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "source",
                  "pid"
                ],
                "minItems": 1,
                "properties": {
                  "source": {
                    "description": "Where the id comes from",
                    "type": "string"
                  },
                  "pid": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    "pages": {"type": "string"},
    "url": {
      "type": "string",
      "format": "uri"
    },
    "identifier": {"type": "string"},
    "description": {"type": "string"},

  }
}