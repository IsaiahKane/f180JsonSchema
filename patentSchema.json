{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
  "title": "Patent JSON Schema",
  "type": "object",
  "propeties": {
    "faculty_id": {"type": "string"},
    "title": {"type": "string"},
    "patent_type": {"type": "string"},
    "year_info": {"type": "number"},
    "publisher": {
      "type": "object",
      "properties": {
        "patent_num": {"type": "string"},
        "patent_nationality": {"type": "string"},
        "location": {"type": "string"}
      }
    },
    "contributors": {
      "type": "object",
      "properties": {
        "coauthor_string": {
          "type": "string",
          "description": "A single line of all contributing authors, separated by commas."
        },   
        "coauthor_list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "first_name",
              "last_name"
            ],
            "properties": {
              "first_name": {"type": "string"},
              "last_name": {"type": "string"},
              "middle_initial": {"type": "string"},
                "email": {
                "type": "string",
                "format": "email"
              },
              "affiliation": {
                "type": "object",
                "required": ["institution_name","ipeds_id"],
                "properties": {
                  "institution_name": {"type": "string"},
                  "intf_db_id": {
                    "description": "The faculty180 database.",
                    "type": "string"
                  },
                  "ipeds_id": {
                    "description": "Standard identifier for Universities",
                    "type": "string"
                  }                     
                }
              },
              "ids": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "source",
                    "pid"
                  ],
                  "minItems": 1,
                  "properties": {
                    "source": {
                      "description": "Where the id comes from",
                      "type": "string"
                    },
                    "pid": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }        
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "description": {"type": "string"},
    "patent_or_copyright": {
      "type": "string",
      "enum": [
        "Patent",
        "Copyright"
      ]
    },
    "review_type": {
      "type": "string",
      "enum": [
        "Blind Peer Reveiwed",
        "Non-Blind Peer Reveiwed",
        "Editorially Reviewed",
        "Invited",
        "Not Reviewed"
      ]
    },
    "in_ex": {
      "type": "string",
      "enum": [
        "Internal",
        "External"
      ]
    } 
  }
}