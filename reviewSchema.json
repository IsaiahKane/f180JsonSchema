{
	"$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://dev.interfolio.com/json-schemas/SCP-transfer.json",
  "title": "Review Schema",
  "type": "object",
  "required": ["faculty_id", "title", "year_info", "publisher"],
  "properties": {
  	"faculty_id": {"type": "string"},
  	"title": {"type": "string"},
  	"year_info": {"type": "number"},
  	"outlet": {"type": "string"},
  	"volume": {"type": "string"},
  	"publisher": {"type": "string"},
  	"pub_location": {"type": "string"},
  	"pub_country": {"type": "string"},
    "coauthors": {
      "type": "object",
      "properties": {
      	"coauthor_string": {
      		"type": "string",
      		"description": "A single line of all contributing authors, separated by commas."
      	},   
      	"coauthor_list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "first_name",
              "last_name"
            ],
            "properties": {
              "first_name": {"type": "string"},
              "last_name": {"type": "string"},
              "middle_initial": {"type": "string"},
                "email": {
                "type": "string",
                "format": "email"
              },
              "affiliation": {
                "type": "object",
                "required": ["institution_name","ipeds_id"],
                "properties": {
                  "institution_name": {"type": "string"},
                  "intf_db_id": {
                    "description": "The faculty180 database.",
                    "type": "string"
                  },
                  "ipeds_id": {
                    "description": "Standard identifier for Universities",
                    "type": "string"
                  }                     
                }
              },
              "ids": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "source",
                    "pid"
                  ],
                  "minItems": 1,
                  "properties": {
                    "source": {
                      "description": "Where the id comes from",
                      "type": "string"
                    },
                    "pid": {"type": "string"}
                  }
                }
              }
            }
          }
     		}
      }
    },
 		"number_info": {"type": "string"},
 		"pages": {"type": "string"},
 		"url": {
 			"type": "string",
 			"format": "uri"
 		},
 		"description": {"type": "string"},
    "type_of_review": {
      "type": "string",
      "enum": [
        "Review, Product/Software",
        "Review, Creative Work",
        "Review, Book"
      ]
    },
    "review_type": {
      "type": "string",
      "enum": [
        "Blind Peer Reviewed",
        "Non-blind Peer Reviewed",
        "Editorially Reviewed",
        "Invited",
        "Not Reviewed"
      ]
    },
    "in_ex": {
      "type": "string",
      "enum": [
        "Internal",
        "External"
      ]
    }
  }
}